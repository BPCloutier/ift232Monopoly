        <Image Grid.Column="0" Grid.Row="0"  Name="pionImageBleu" Source="ressources/vert.jpg" Width="20" Height="20" Margin="0,50,10,0"/>
        <Image Grid.Column="0" Grid.Row="0"  Name="pionImageJaune" Source="ressources/vert.jpg" Width="20" Height="20" Margin="35,50,0,0"/>

