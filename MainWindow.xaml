            <RowDefinition Height="59" />
            <RowDefinition Height="59" />
            <RowDefinition Height="59" />
            <RowDefinition Height="59" />
            <RowDefinition Height="95" />
        </Grid.RowDefinitions>
        <!--Autant de colonne que de case-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97" />
            <ColumnDefinition Width="61" />
